<% include ./partials/header %>
	<h1 class="ui huge header">Create a New Blog Post</h1>
	<div class ="ui main text container segment newPage">
	<form class="ui form" action="/blogs/" method="POST">
		<% /*the values for the name attributes are using body-parser syntax to create all the values from the inputs for the form inside an object body*/ %>
		<div class="field">
		<label>Title</label>
		<input type="text" name="blog[title]" id="blogTitle" placeholder="Enter Title"/>
		</div>
		<div class="field">
		<label>Author</label>
		<input type="text" name="blog[author]" id="blogAuthor" placeholder="Enter Author"/>
		</div>
		<div class="field">
		<label>Image</label>
		<input type="text" name="blog[imageUrl]" id="blogImage" placeholder="Enter Image url"/>
		</div>
		<div class="field">
		<label>Post</label>
		<textarea  name="blog[post]" id="blogPost" required></textarea>
		</div>
		<input type="submit" class="small ui button" value="Submit"/>
	</form>
</div>
<% include ./partials/footer %>
