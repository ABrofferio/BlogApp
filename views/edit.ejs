<% include ./partials/header %>
<h1>Edit a Post</h1>
<div class="ui main text container segment">
	<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
			<div class="field">
			<label>Title</label>
			<input type="text" name="revisedBlog[title]" id="revisedTitle" value="<%=blog.title%>"/>
			</div>
			<div class="field">
                        <label>Author</label>
                        <input type="text" name="revisedBlog[author]" id="revisedAuthor" value="<%=blog.author%>"/>
                        </div>
			<div class="field">	
			<label>Image</label>
			<input type="text" name="revisedBlog[imageUrl]" id="revisedImage" value="<%=blog.imageUrl%>"/>
			</div>
			<div class="field">
			<label>Post</label>
			<textarea name="revisedBlog[post]" id="revisedPost" required><%=blog.post%></textarea>
			</div>
	<div class="field">	
	<input type="submit" class="small ui button" value="submit"/>
	</div>
	</form>
	<br>
	<form  action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
		<input type="submit" class="ui red basic button" value="Delete">
	</form>
</div>
<% include ./partials/footer %>
